<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">

    <View
        android:layout_width="345dp"
        android:layout_height="1dp"
        android:background="#ffe5e5e5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <LinearLayout
            android:id="@+id/ll_head_circle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/at_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_head_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="15dp">


                <TextView
                    android:id="@+id/at_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:lineSpacingExtra="0sp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="西门吹雪西门吹雪" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/at_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        tools:text="8分钟前" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:id="@+id/visible_limited"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            />
                        <LinearLayout
                            android:id="@+id/at_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView

                                android:id="@+id/at_publishtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="0sp"
                                android:text="发布于圈子： "
                                android:textColor="#999999"
                                android:textSize="14sp" />

                            <TextView

                                android:id="@+id/at_circlename"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lineSpacingExtra="0sp"
                                android:maxLines="1"
                                android:textColor="#05a4be"
                                android:textSize="14sp"
                                tools:text="舌尖上的海口" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/at_longText_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/at_longText_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/at_longText_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0sp"
                android:textColor="#333333"
                android:paddingLeft="5dp"
                android:textSize="17sp"
                tools:text="海口旅游攻略" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/at_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_zan" />

                <TextView
                    android:id="@+id/at_zannum"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:gravity="center|left"
                    android:lineSpacingExtra="0sp"
                    android:paddingBottom="2dp"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="点赞" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_v2_comment" />

                <TextView
                    android:id="@+id/at_commentnum"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:gravity="center|left"
                    android:lineSpacingExtra="0sp"
                    android:paddingBottom="2dp"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="评论" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>