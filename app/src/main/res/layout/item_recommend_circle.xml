<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<ImageView
    android:id="@+id/circle_image"
    android:layout_width="41dp"
    android:layout_height="41dp"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true"
    android:layout_marginTop="10dp"
    />
<TextView
    android:id="@+id/recommend_circle_name"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_below="@+id/circle_image"
    android:layout_marginTop="10dp"
    android:textColor="#ff333333"
    android:textSize="14dp"
    android:maxLines="2"
    android:text="老爸茶馆海口"
    android:gravity="center"
    />
<TextView
    android:id="@+id/recommend_circle_attention_num"
    android:layout_width="match_parent"
    android:layout_height="12dp"
    android:layout_below="@+id/recommend_circle_name"
    android:gravity="center"
    android:textColor="#ff999999"
    android:textSize="12dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="15dp"
    />

    <Button
        android:id="@+id/is_attention"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn_blue_circle"
        android:layout_centerInParent="true"
        android:textSize="12dp"
        android:text="关注"
        android:textColor="#00a4ff"
        android:layout_below="@+id/recommend_circle_attention_num"
        />
</RelativeLayout>