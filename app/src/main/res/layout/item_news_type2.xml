<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <View
        android:id="@+id/bigline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/biglinebg" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="5sp"
        android:maxLines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="17sp"
        tools:text="满口喝到完苏梅子果肉，这杯正是暖冬的味道正是暖冬的..." />

    <RelativeLayout
        android:id="@+id/rl_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_default_news_small" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_covernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_new_cover_num"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="0sp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                tools:text="8图" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"

        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"
            android:paddingRight="10dp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="下饭馆下你好下饭" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"
            android:paddingRight="10dp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="12-29" />

        <TextView
            android:id="@+id/tv_readnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:lineSpacingExtra="1sp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="456次浏览" />
    </LinearLayout>

    <View
        android:id="@+id/smallline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linebg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />
</LinearLayout>

