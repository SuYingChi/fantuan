<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/report_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/report_cover"
                android:background="#7f000000">


                <com.wetime.fanc.customview.MixtureTextView
                    android:id="@+id/mixtureTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:lineSpacingExtra="5sp"
                    android:maxLines="2"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/invalid_report" />

                    <!--<TextView-->
                    <!--android:id="@+id/report_name"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:ellipsize="end"-->
                    <!--android:lineSpacingExtra="5sp"-->
                    <!--android:maxLines="2"-->
                    <!--android:text="聚焦新一届国务院机构组成人员，这个专题名称可以有两行哦"-->
                    <!--android:textColor="#333333"-->
                    <!--android:textSize="18sp" />-->


                </com.wetime.fanc.customview.MixtureTextView>
            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/report_new_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0sp"
                android:text="最新"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/report_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:maxLines="2"
                android:text="聚焦新一届国务院机构组成人员，这个专题名称可以有两行哦"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_hot_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0sp"
                android:text="热点"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/report_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:maxLines="2"
                tools:text="聚焦新一届国务院机构组成人员，这个专题名称可以有两行哦"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_newhot_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="0sp"
                android:text="聚焦"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/report_newhot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:maxLines="2"
                tools:text="聚焦新一届国务院机构组成人员，这个专题名称可以有两行哦"
                android:textColor="#666666"

                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:id="@+id/smallline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/linebg" />
    </LinearLayout>
</LinearLayout>

