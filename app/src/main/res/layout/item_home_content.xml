<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.king.batterytest.fbaselib.customview.GridViewForScrollView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="15dp"
        android:numColumns="5"
        android:padding="10dp"
        android:scrollbars="none"
        android:verticalSpacing="0dp"/>

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/bg_edit"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"/>
    <com.king.batterytest.fbaselib.customview.ListViewForScrollView

        android:id="@+id/lv_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

