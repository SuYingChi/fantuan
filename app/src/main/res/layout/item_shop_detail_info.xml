<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_headinfo"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/iv_cover"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/bg_all"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="青沼日本料理 (望京店)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="8dp"
                android:gravity="left|bottom"
                android:orientation="horizontal">


                <com.wetime.fanc.order.MyRatingBar
                    android:id="@+id/rb_socre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/rating_in_big"
                    app:starFill="@drawable/rating_on_big"
                    app:starHalf="@drawable/rating_half_big"
                    app:starImageSize="12dp"
                    app:starPadding="3dp"
                    app:starStep="5"
                    app:stepSize="Half" />

                <TextView
                    android:id="@+id/tv_spend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="0sp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="¥57/人" />

                <TextView
                    android:id="@+id/tv_seal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingRight="12dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="月销量1200" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="日韩料理" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_headcentername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0sp"
                    android:paddingRight="5dp"
                    android:paddingTop="6dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="日月广场" />

                <TextView
                    android:id="@+id/tv_dis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="1.7km" />

                <TextView
                    android:id="@+id/tv_guanzhu"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_red_corner"
                    android:gravity="center"
                    android:text="+ 关注"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_loc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_loc"
            android:drawablePadding="12dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="明珠路8号宜欣广场四楼D区18号218号…" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="85dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_phone_red" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:background="@color/linebg" />
</LinearLayout>

