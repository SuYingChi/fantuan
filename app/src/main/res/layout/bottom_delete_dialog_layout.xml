<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_color_lib"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="请选择删除原因"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp" />

        <View
            android:id="@+id/tv_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_lib" />

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="欺诈骗钱"
            android:textColor="#388ae5"
            android:textSize="15sp" />

        <View
            android:id="@+id/tv_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_lib" />

        <TextView

            android:id="@+id/tv_item3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="色情暴力"
            android:textColor="#388ae5"
            android:textSize="15sp" />

        <View
            android:id="@+id/tv_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_lib" />

        <TextView
            android:id="@+id/tv_item4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="广告骚扰"
            android:textColor="#388ae5"
            android:textSize="15sp" />

        <View
            android:id="@+id/tv_view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_lib" />

        <TextView
            android:id="@+id/tv_item5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="侵权"
            android:textColor="#388ae5"
            android:textSize="15sp" />
        <View
            android:id="@+id/tv_view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color_lib" />

        <TextView
            android:id="@+id/tv_item6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="违反圈子规章"
            android:textColor="#388ae5"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="#388ae5"
        android:textSize="15sp" />

</LinearLayout>