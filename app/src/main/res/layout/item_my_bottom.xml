<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_my_collect"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right"
        android:gravity="center|left"
        android:lineSpacingExtra="1sp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:text="我的收藏"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e1e1e1" />

    <LinearLayout
        android:id="@+id/ll_beauthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_beauthor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_my_author"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center|left"
            android:lineSpacingExtra="1sp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="申请成为头条号"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#e1e1e1" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/iv_my_setting"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right"
        android:gravity="center|left"
        android:lineSpacingExtra="1sp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:text="设置"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e1e1e1" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_my_about"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right"
        android:gravity="center|left"
        android:lineSpacingExtra="1sp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:text="关于范团"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e1e1e1" />

</LinearLayout>

