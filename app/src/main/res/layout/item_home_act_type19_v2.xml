<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <include layout="@layout/item_home_act_head_v2" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="6dp"
        android:maxLines="5"
        android:paddingTop="15dp"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="“海口”一名最早出现于宋代，已有九百多年的历 史，意为南渡江入海口处的一块浦滩之地。海口 历史上隶属琼山县，名称沿革有宋代的海口浦， 元代的海口港，明代的海口都、海口所、海口所 城，清代的琼州口等明代的海口都、海口…全文" />

    <RelativeLayout
        android:id="@+id/rl_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp">
        <com.wetime.fanc.customview.CanDoBlankGridView
            android:id="@+id/gv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="3dp"
            android:scrollbars="none"
            android:verticalSpacing="3dp" />

    </RelativeLayout>

    <include layout="@layout/item_home_act_bottom_v2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linebg" />
</LinearLayout>

