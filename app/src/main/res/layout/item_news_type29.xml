<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:textColor="#333333"
        android:textSize="24sp"
        tools:text="2018年" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="24sp"
                tools:text="11" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                tools:text="12月" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-1sp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:text="打分" />

                <com.wetime.fanc.order.MyRatingBar
                    android:id="@+id/rb_socre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    app:starCount="5"
                    app:starEmpty="@drawable/rating_in_big"
                    app:starFill="@drawable/rating_on_big"
                    app:starHalf="@drawable/rating_half_big"
                    app:starImageSize="12dp"
                    app:starPadding="3dp"
                    app:starStep="5"
                    app:stepSize="Half" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:textColor="#333333"
                android:textSize="17sp"
                tools:text="认为，老爸茶其实是应为那里聚集着许多中老" />

            <com.wetime.fanc.customview.CanDoBlankGridView
                android:id="@+id/gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="6dp"
                android:scrollbars="none"
                android:verticalSpacing="6dp" />

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="0sp"
                android:textColor="@color/text_blue"
                android:textSize="15sp"
                tools:text="点评了店铺 楚记烧烤（宜新店）" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_shopsay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/bg_edit"
                android:lineSpacingExtra="4.5sp"
                android:padding="8dp"
                android:textColor="#333333"
                android:textSize="14sp"
                tools:text="商家回复：感谢感谢，再接再厉。感谢感谢，再接再厉。感谢感谢，再接再厉。" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

