<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tancan_pic"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_taocan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="0sp"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="双人经典烤肉套餐" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#ff3f53"
                    android:lineSpacingExtra="0sp"
                    android:text="¥"
                    />
                <TextView
                    android:id="@+id/tv_taocan_xianjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0sp"
                    android:textColor="#ff3f53"
                    android:textSize="18sp"
                    tools:text="199.90" />

                <TextView
                    android:id="@+id/tv_taocan_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lineSpacingExtra="0sp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="¥299.98" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_taocan_buy"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_btn_red_circle"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:textColor="#ff3f53"
                android:textSize="14sp"
                android:text="@string/str_buy" />

            <TextView
                android:id="@+id/tv_taocan_yishou"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:lineSpacingExtra="0sp"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="已售2367" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
